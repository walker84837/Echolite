# EditorConfig for Scala based on Google Style guidelines (adapted for Scala)
root = true

[*.scala]
# Use UTF-8 encoding as specified
charset = utf-8

# Use spaces for indentation (no tab characters)
indent_style = space
indent_size = 4
tab_width = 4

# Set line ending to LF (typical for Unix-based systems)
end_of_line = lf

# Remove any trailing whitespace on each line
trim_trailing_whitespace = true

# Ensure that files end with a newline
insert_final_newline = true

# Enforce a maximum line length of 100 characters
max_line_length = 100
